sentence = input("Введите предложение: ") # принимаем строку от пользователя
words = sentence.strip().split(" ") # удаляем начальные и конечные пробелы, разделяем по одному пробелу
if len(words) < 7: # проверяем, что в предложении есть как минимум семь слов
    print("Ошибка! В предложении должно быть не менее семи слов.")
else:
    first_six_words = "" # создаем пустую строку
    for i in range(6): # проходим циклом по первым шести словам
        first_six_words += words[i] + " "  # добавляем слово и пробел в строку
    print("Первые 6 слов: " + first_six_words.strip()) # выводим первые 6 слов без начальных и конечных пробелов
