sentence = input("Введите предложение: ")

# Определяем список гласных букв
vowels = "аеёиоуыэюя"

# Создаем переменную для подсчета количества гласных букв в предложении
vowel_count = 0

# Проходимся по каждой букве в предложении
for letter in sentence:
    # Если текущая буква является гласной, увеличиваем счетчик на 1
    if letter.lower() in vowels:
        vowel_count += 1

# Выводим результат на экран
print("Количество гласных букв в предложении:", vowel_count)
