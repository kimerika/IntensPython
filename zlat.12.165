max_count = 1 #начальное значение максимального количества подряд идущих символов 
current_count = 1 #начальное значение текущего количества подряд идущих символов 
for i in range(1, len(text)): 
    if text[i] == text[i-1]: #если текущий символ равен предыдущему 
        current_count += 1 #увеличиваем текущее количество 
    else: #иначе 
        if current_count > max_count: #если текущее количество больше максимального 
            max_count = current_count #обновляем максимальное количество 
        current_count = 1 #и сбрасываем текущее количество подряд идущих символов 
if current_count > max_count: #проверяем последнюю последовательность символов 
    max_count = current_count 
print(f"Наибольшее количество идущих подряд одинаковых символов: {max_count}")
