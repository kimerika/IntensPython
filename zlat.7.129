seq = [] # Создаем пустой список для последовательности чисел
num = None # Создаем переменную для хранения текущего числа
seq_index = 1 # Создаем переменную для хранения порядкового номера текущего числа
has_multiple_seven = False # флаг наличия чисел, кратных 7
multiple_seven_idx = None # порядковый номер первого числа, кратного 7

# Циклически запрашиваем у пользователя ввод чисел до тех пор, пока не будет введено число -1
while num != -1:
    num = int(input(f"Введите {seq_index}-e число: ")) # запрашиваем ввод числа
    seq.append(num) # добавляем число в список
    seq_index += 1 # увеличиваем порядковый номер текущего числа

for i in range(len(seq)):
    if seq[i] % 7 == 0: # проверяем, является ли число кратным 7
        multiple_seven_idx = i # сохраняем порядковый номер текущего числа
        has_multiple_seven = True # выставляем флаг наличия чисел, кратных 7
        break

if has_multiple_seven:
    print(f"Первый элемент, кратный 7: {seq[multiple_seven_idx]}, его индекс: {multiple_seven_idx}")
else:
    print("В последовательности отсутствуют числа, кратные 7")
