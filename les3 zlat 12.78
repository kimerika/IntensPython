sentence = input("Введите предложение: ") # принимаем строку от пользователя
words = sentence.strip().split(" ") # удаляем начальные и конечные пробелы, разделяем по одному пробелу
if len(words) < 3: # проверяем, что в предложении есть хотя бы три слова
    print("Ошибка! В предложении должно быть не менее трех слов.")
else:
    second_to_last_word = words[-2]
    last_word = words[-1]
    print("Предпоследнее слово: " + second_to_last_word)
    print("Последнее слово: " + last_word)
