numbers = list(map(int, input("Введите целые числа через пробел: ").split()))  # вводим набор целых чисел
even_found = False  # флаг, который показывает, было ли найдено чётное число в наборе
for num in numbers:
    if num % 2 == 0:  # если число чётное,
        even_found = True  # устанавливаем флаг и выходим из цикла
        break
if even_found:
    print("В заданном наборе есть хотя бы одно чётное число.")
else:
    print("В заданном наборе нет чётных чисел.")
