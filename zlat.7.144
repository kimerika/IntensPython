pairs = [(10, 20), (30, 15), (25, 40), (50, 5)] # список кортежей с парами чисел

max_sum = sum(pairs[0]) # задаем начальное значение для максимальной суммы пары чисел

for pair in pairs: # проходим по всем парам чисел из списка
    curr_sum = sum(pair) # находим сумму текущей пары чисел
    if curr_sum > max_sum: # если текущая сумма больше максимальной
        max_sum = curr_sum # обновляем значение максимальной суммы

print('Максимальная сумма значений чисел в паре:', max_sum) # выводим результат
