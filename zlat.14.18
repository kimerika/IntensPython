def triangle_area(x1, y1, x2, y2, x3, y3):
    """Функция вычисляет площадь треугольника по координатам его вершин"""
    area = abs((x1*(y2-y3)+x2*(y3-y1)+x3*(y1-y2))/2)
    return area

x1 = float(input("Введите x-координату первой вершины пятиугольника: ")) 
y1 = float(input("Введите y-координату первой вершины пятиугольника: ")) 

x2 = float(input("Введите x-координату второй вершины пятиугольника: ")) 
y2 = float(input("Введите y-координату второй вершины пятиугольника: ")) 

x3 = float(input("Введите x-координату третьей вершины пятиугольника: ")) 
y3 = float(input("Введите y-координату третьей вершины пятиугольника: ")) 

x4 = float(input("Введите x-координату четвертой вершины пятиугольника: ")) 
y4 = float(input("Введите y-координату четвертой вершины пятиугольника: ")) 

x5 = float(input("Введите x-координату пятой вершины пятиугольника: ")) 
y5 = float(input("Введите y-координату пятой вершины пятиугольника: ")) 

area = triangle_area(x1, y1, x2, y2, x3, y3) + triangle_area(x3, y3, x4, y4, x5, y5)

print("Площадь выпуклого пятиугольника равна:", area)
