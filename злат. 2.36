temp_celsius = float(input("Введите температуру по шкале Цельсия: "))

# Пересчет в градусы Фаренгейта
temp_fahrenheit = temp_celsius * 1.8 + 32
print("Температура по шкале Фаренгейта: ", temp_fahrenheit)

# Пересчет в градусы Кельвина
temp_kelvin = temp_celsius + 273.15
print("Температура по шкале Кельвина: ", temp_kelvin)
