sentence = input("Введите предложение: ") # принимаем строку от пользователя
words = sentence.strip().split(" ") # удаляем начальные и конечные пробелы, разделяем по одному пробелу
longest_word = words[0] # предполагаем, что самое длинное слово - это первое
for word in words: # проходим циклом по всем словам
    if len(word) > len(longest_word): # проверяем, длиннее ли текущее слово, чем самое длинное
        longest_word = word # если да, запоминаем его
print("Самое длинное слово: " + longest_word) # выводим самое длинное слово
