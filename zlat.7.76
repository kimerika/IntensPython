team1_count = 0 # количество удалений первой команды
team1_time = 0 # общее время удалений первой команды
team2_count = 0 # количество удалений второй команды
team2_time = 0 # общее время удалений второй команды

for i in range(24):
  team_number = int(input("Номер команды: ")) # ввод номера команды
  removal_time = int(input("Время удаления (2, 5 или 10 минут): ")) # ввод времени удаления
  
  if team_number == 1: # если удаление от первой команды
    team1_count += 1 # увеличиваем количество удалений первой команды
    team1_time += removal_time # увеличиваем общее время удалений первой команды
    
  elif team_number == 2: # если удаление от второй команды
    team2_count += 1 # увеличиваем количество удалений второй команды
    team2_time += removal_time # увеличиваем общее время удалений второй команды
    
print("Количество удалений первой команды:", team1_count)
print("Общее время удалений первой команды:", team1_time, "минут")

print("Количество удалений второй команды:", team2_count)
print("Общее время удалений второй команды:", team2_time, "минут")
