distance = 10  # пробег в первый день
total_dist = 10  # инициализация общего пробега

# пробег за 2-10 день:
for i in range(2, 11):
    distance *= 1.1  # увеличение пробега на 10%
    total_dist += distance  # добавление пробега к общему пробегу
    print("Пробег за день", i, ":", round(distance, 2), "км")

# суммарный пробег за первые 7 дней:
print("Суммарный пробег за первые 7 дней:", round(total_dist, 2), "км")
