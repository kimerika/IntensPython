from math import sqrt 
 
# Вводим координаты вершин четырехугольника 
x1, y1 = map(float, input("Введите координаты первой вершины (через пробел): ").split()) 
x2, y2 = map(float, input("Введите координаты второй вершины (через пробел): ").split()) 
x3, y3 = map(float, input("Введите координаты третьей вершины (через пробел): ").split()) 
x4, y4 = map(float, input("Введите координаты четвертой вершины (через пробел): ").split()) 
 
# Находим площадь четырехугольника, разбив его на два треугольника 
S1 = abs((x2 - x1)*(y3 - y1) - (x3 - x1)*(y2 - y1)) / 2.0 
S2 = abs((x3 - x1)*(y4 - y1) - (x4 - x1)*(y3 - y1)) / 2.0 
S = S1 + S2 
 
# Выводим результаты 
print("Площадь четырехугольника: ", S)
