a = [a1, a2, a3, a4, a5, a6, a7, a8, a9, a10, a11, a12, a13, a14, a15] # список а1, ..., а15
has_negative = False # флаг наличия отрицательных чисел
neg_idx = None # порядковый номер первого отрицательного элемента

for i in range(len(a)):
    if a[i] < 0: # проверяем, является ли элемент отрицательным
        neg_idx = i # сохраняем порядковый номер отрицательного элемента
        has_negative = True # выставляем флаг наличия отрицательных чисел
        break

if has_negative:
    print(f"Первое отрицательное число: {a[neg_idx]}, его индекс: {neg_idx}")
else:
    print("Отрицательных чисел нет в последовательности")
