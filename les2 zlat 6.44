number = int(input("Введите натуральное число: ")) # вводим число с клавиатуры

max_digit = 0 # инициализируем максимальную цифру
min_digit = 9 # инициализируем минимальную цифру

# проходим по каждой цифре числа и находим максимальную и минимальную цифры
for digit in str(number):
    if int(digit) > max_digit:
        max_digit = int(digit)
    if int(digit) < min_digit:
        min_digit = int(digit)

# проверяем, является ли разность максимальной и минимальной цифр четным числом
diff = max_digit - min_digit
if diff % 2 == 0:
    print("Разность максимальной и минимальной цифр числа", number, "является четным числом")
else:
    print("Разность максимальной и минимальной цифр числа", number, "не является четным числом")
