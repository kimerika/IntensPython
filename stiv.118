def is_palindrome(s):
    # Удаляем знаки препинания и приводим строку к нижнему регистру
    s = s.replace(".", "").replace(",", "").replace("?", "").replace("!", "").replace(" ", "").lower()
    # Сравниваем строку с перевернутой версией этой же строки
    return s == s[::-1]

# Запрашиваем строку у пользователя
string = input("Введите строку: ")

# Проверяем, является ли строка словесным палиндромом
if is_palindrome(string):
    print("Эта строка является словесным палиндромом")
else:
    print("Эта строка не является словесным палиндромом")
