distance = 1 # расстояние до места работы (в км)
step = 2 # шаг, с которым мужчина метается (начинает с 2, так как первый шаг уже сделан)
total_distance = 1 # общее расстояние, которое пройдет мужчина
for i in range(3, 102):
    if i % 2 == 1:
        distance += 1 / step
    else:
        distance -= 1 / step
        
    total_distance += 1 / step
    step += 1

print("Расстояние, на котором будет находиться мужчина:", round(distance, 3), "км") # округление до 3 знаков после запятой
print("Общее расстояние, которое он пройдет:", round(total_distance, 3), "км") # округление до 3 знаков после запятой
